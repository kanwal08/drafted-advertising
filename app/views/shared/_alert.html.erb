<div class="alert alert-<%= alert_type %> d-flex align-items-center p-5 mb-10">
  <i class="ki-duotone <%= alert_icon(alert_type) %>> fs-2hx text-<%= alert_type %> me-4">
    <span class="path1"></span>
    <span class="path2"></span>
  </i>
  <div class="d-flex flex-column">
    <h4 class="mb-1 text-<%= alert_type %>"><%= alert_type.titleize %></h4>
    <span><%= message %></span>
  </div>
</div>

<div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="toast-header">
    <i class="ki-duotone ki-abstract-39 fs-2 text-<%=alert_type %> me-3">
      <span class="path1"></span>
      <span class="path2"></span>
    </i>
    <strong class="me-auto"><%= alert_type.titleize %></strong>
    <small>11 mins ago</small>
    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
  <div class="toast-body">
    <%= message %>
  </div>
</div>

